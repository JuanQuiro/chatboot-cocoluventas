# Dockerfile for Development
FROM node:18-alpine

# Install dependencies for development
RUN apk add --no-cache python3 make g++

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev)
RUN npm install

# Copy source code
COPY . .

# Expose ports
EXPOSE 3001

# Development command (with nodemon)
CMD ["npm", "run", "dev"]
