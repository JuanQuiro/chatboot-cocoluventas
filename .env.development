# Environment: DEVELOPMENT
NODE_ENV=development

# Server
PORT=3000
API_PORT=3001
HOST=localhost

# Database
MONGODB_URI=mongodb://localhost:27017/cocolu-ventas-dev
MONGODB_TEST_URI=mongodb://localhost:27017/cocolu-ventas-test

# JWT
JWT_SECRET=dev-secret-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app-dev.log

# Features
ENABLE_AUDIT=true
ENABLE_METRICS=true
ENABLE_DEBUG=true

# External Services (mock en dev)
WHATSAPP_API_URL=http://localhost:8080/mock
EMAIL_SERVICE=mock

# Dashboard
DASHBOARD_URL=http://localhost:3000
