# ====================================
# CONFIGURACIÓN DEL SERVIDOR
# ====================================
PORT=3008
API_PORT=3009

# NOTA: Baileys NO requiere API Keys ni tokens
# Solo escanea el QR con tu WhatsApp

# ====================================
# CONFIGURACIÓN DEL NEGOCIO
# ====================================
BUSINESS_NAME=Cocolu Ventas
BUSINESS_PHONE=+1234567890
BUSINESS_EMAIL=contacto@cocoluventas.com
BUSINESS_ADDRESS=Tu dirección comercial

# Horario de atención (formato 24h)
BUSINESS_HOURS_START=09:00
BUSINESS_HOURS_END=18:00
BUSINESS_DAYS=1,2,3,4,5

# URLs y enlaces
CATALOG_URL=https://cocoluventas.com/catalogo
WEBSITE_URL=https://cocoluventas.com
WHATSAPP_GROUP_URL=https://chat.whatsapp.com/tu_grupo

# ====================================
# BASE DE DATOS Y PERSISTENCIA
# ====================================
DB_PATH=./database
DATA_PATH=./data
AUTO_SAVE_INTERVAL=300000

# ====================================
# LOGGING Y MONITOREO
# ====================================
LOG_LEVEL=info
# Opciones: error, warn, info, debug, trace

# ====================================
# SEGURIDAD
# ====================================
CORS_ORIGIN=*
# En producción usar: https://tudominio.com

# Rate Limiting
RATE_LIMIT_MAX_MESSAGES=20
RATE_LIMIT_MAX_API=100
RATE_LIMIT_WINDOW=60000

# ====================================
# CIRCUIT BREAKER
# ====================================
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000

# ====================================
# MODO
# ====================================
NODE_ENV=development
# Opciones: development, production
