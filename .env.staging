# Environment: STAGING
NODE_ENV=staging

# Server
PORT=3000
API_PORT=3001
HOST=0.0.0.0

# Database
MONGODB_URI=mongodb://mongo:27017/cocolu-ventas-staging

# JWT
JWT_SECRET=staging-secret-key-CHANGE-THIS
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=https://staging.cocolu-ventas.com,https://dashboard-staging.cocolu-ventas.com

# Rate Limiting
RATE_LIMIT_MAX=200
RATE_LIMIT_WINDOW=60000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app-staging.log

# Features
ENABLE_AUDIT=true
ENABLE_METRICS=true
ENABLE_DEBUG=false

# External Services
WHATSAPP_API_URL=https://api.whatsapp-staging.com
EMAIL_SERVICE=sendgrid

# Dashboard
DASHBOARD_URL=https://dashboard-staging.cocolu-ventas.com

# SSL
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem
