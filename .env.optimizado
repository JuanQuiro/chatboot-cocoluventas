# ⚡ CONFIGURACIÓN OPTIMIZADA PARA PC LENTA
# Copia este contenido a .env para máximo rendimiento

# ============================================
# MEMORIA Y RECURSOS
# ============================================

# Máximo de memoria para Node.js
NODE_OPTIONS=--max-old-space-size=512

# Límites de Analytics (muy importante)
ANALYTICS_MAX_EVENTS=50
ANALYTICS_MAX_USERS=5000
ANALYTICS_MAX_PRODUCTS=500
ANALYTICS_CLEANUP_INTERVAL=3600000

# ============================================
# TIMEOUTS
# ============================================

REQUEST_TIMEOUT=30000
RESPONSE_TIMEOUT=5000
CONNECTION_TIMEOUT=10000
HEALTH_CHECK_INTERVAL=60000

# ============================================
# CACHÉ
# ============================================

CACHE_ENABLED=true
CACHE_TTL=300000
CACHE_MAX_SIZE=100

# ============================================
# LOGS
# ============================================

LOG_LEVEL=warn
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=3
LOG_COMPRESS=true

# ============================================
# BOT
# ============================================

BOT_ADAPTER=baileys
USE_PAIRING_CODE=true
PHONE_NUMBER=+584244370180

# ============================================
# PUERTOS
# ============================================

PORT=3008
API_PORT=3009

# ============================================
# OPTIMIZACIONES ADICIONALES
# ============================================

# Desactivar features innecesarias
ENABLE_ANALYTICS=false
ENABLE_HEALTH_CHECK=false
ENABLE_METRICS=false

# Reducir frecuencia de operaciones
CLEANUP_INTERVAL=3600000
METRICS_FLUSH_INTERVAL=300000

# ============================================
# GENTOO ESPECÍFICO
# ============================================

# Para Gentoo con recursos limitados
USE_MINIMAL_MODE=true
DISABLE_CLUSTERING=true
SINGLE_THREAD_MODE=true
